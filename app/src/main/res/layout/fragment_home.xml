<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/imageView_backgroundLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/homescreen_background"
        app:layout_constraintBottom_toTopOf="@+id/button_my_monsters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dnd_logo" />

    <Button
        android:id="@+id/button_my_encounters"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:foregroundTint="#FFFFFF"
        android:text="@string/my_encounters"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:backgroundTint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/button_create_encounters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_my_monsters"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:foregroundTint="#FFFFFF"
        android:text="@string/my_monsters"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:backgroundTint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/button_my_encounters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_create_encounters"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:foregroundTint="#FFFFFF"
        android:text="@string/create_encounters"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:backgroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>